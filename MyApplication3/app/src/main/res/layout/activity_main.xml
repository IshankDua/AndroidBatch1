<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ishank.myapplication.MainActivity">

    <Button
        android:id="@+id/OpenCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Open Calculator" />

    <Button
        android:id="@+id/OpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OpenCalculator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Open Camera" />

    <Button
        android:id="@+id/OpenDialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/OpenCamera"
        android:layout_alignStart="@+id/OpenCamera"
        android:layout_below="@+id/OpenCamera"
        android:layout_marginTop="94dp"
        android:text="Open Dialer" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="exit" />
</RelativeLayout>
